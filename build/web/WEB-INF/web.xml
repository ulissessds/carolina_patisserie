<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>doceria.usuario.controle.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>doceria.usuario.controle.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastrarUsuarioServlet</servlet-name>
        <servlet-class>doceria.usuario.controle.CadastrarUsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerPerfilServlet</servlet-name>
        <servlet-class>doceria.usuario.controle.VerPerfilServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InicioServlet</servlet-name>
        <servlet-class>doceria.inicio.controle.InicioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdicionarProdutoSacolaComprasServlet</servlet-name>
        <servlet-class>doceria.sacolacompras.controle.AdicionarProdutoSacolaComprasServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoverProdutoSacolaComprasServlet</servlet-name>
        <servlet-class>doceria.sacolacompras.controle.RemoverProdutoSacolaComprasServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadProdutoFotoServlet</servlet-name>
        <servlet-class>doceria.produto.controle.UploadProdutoFotoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AtualizarProdutoFotoServlet</servlet-name>
        <servlet-class>doceria.produto.controle.AtualizarProdutoFotoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DownloadProdutoFotoServlet</servlet-name>
        <servlet-class>doceria.produto.controle.DownloadProdutoFotoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastrarUsuarioServlet</servlet-name>
        <url-pattern>/CadastrarUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerPerfilServlet</servlet-name>
        <url-pattern>/VerPerfil</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InicioServlet</servlet-name>
        <url-pattern>/Inicio</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdicionarProdutoSacolaComprasServlet</servlet-name>
        <url-pattern>/AdicionarProdutoSacolaCompras</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoverProdutoSacolaComprasServlet</servlet-name>
        <url-pattern>/RemoverProdutoSacolaCompras</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadProdutoFotoServlet</servlet-name>
        <url-pattern>/UploadProdutoFoto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AtualizarProdutoFotoServlet</servlet-name>
        <url-pattern>/AtualizarProdutoFoto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DownloadProdutoFotoServlet</servlet-name>
        <url-pattern>/DownloadProdutoFoto</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>Inicio</welcome-file>
    </welcome-file-list>
</web-app>
